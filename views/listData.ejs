<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>List Data</title>
</head>
<body>
<div class="container-fluid superAdmin">
    <div class="row">
        <div class="col cover">
            <div class="row ">
                <div class="col ">
                    <h2>LIST DATA USER</h2>
                    <div class="form-group">
                        <label></label>
                        <table class="table">
                            <thead class="thead-dark">
                              <tr>
                                <th scope="col">NO</th>
                                <th scope="col">USER NAME</th>
                                <th scope="col">USER DETAILS</th>
                                <th scope="col">GAME HISTORY</th>
                                <th scope="col">DELETE USER</th>
                              </tr>
                            </thead>
                            <tbody>
                                <% for( let index = 0; index < listData.length; index++ ) { %>
                                    <tr>
                                      <th scope="row"><%= index + 1 %> </th>
                                      <td><%= listData[index].username.toUpperCase()%> </td>
                                      <td><a href= <%= `/detail/${listData[index].id}` %> button type="submit" class="btn btn-primary button" > BIODATA</a></td>
                                      <td><a href= <%= `/history/${listData[index].id}` %> button type="submit" class="btn btn-primary button" > HISTORY</a></td>
                                      <td><button type="submit" class="btn btn-danger" onclick=handleDelete(<%= listData[index].id %>)>DELETE</button></td>
                                    </tr> 
                                <% } %>
                            </tbody>
                        </table>   
                    </div>                      
                </div>           
            </div>
            <div class="row">
                <div class="col button2">
                    <button type="submit" class="btn btn-secondary button mt-2" onclick="dashboard()">GO TO DASHBOARD</button>
                </div>
            </div>
        </div>     
    </div>
</div>

<script src="/js/script.js"></script>
</body>
</html>